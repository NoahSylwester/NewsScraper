<div id="header" class="jumbotron">
  <h1>Monster news</h1>

  <h3>For when checking your closet isn't enough</h3>

  <button id="scrape-button" class="btn btn-lg btn-light">Update articles</button>
</div>

<div id="articles">
  <div>
    {{#each articles}}
      <div class="article" data-id="{{_id}}">
        <div>
          {{datetime}}
        </div>
        <div>
          Obtained from: <a href="http://www.echojs.com/">{{source}}</a>
        </div>
        <h3>{{title}}</h2>
        <a href="{{link}}">{{link}}</a>
        <div>
          <button class="btn btn-sm btn-dark add-note">Add note</button>
        </div>
        <div class="comments"></div>
      </div>
    {{/each}}
  </div>
</div>

