<div id="header" class="jumbotron">
  <h1>Monster News</h1>

  <h3>For when checking your closet isn't enough</h3>

  <button id="scrape-button" class="btn btn-lg btn-light" data-toggle="modal" data-target="#scrapeModal">Update articles</button>
  <button id="search-modal-button" class="btn btn-lg btn-light" data-toggle="modal" data-target="#searchModal">Search</button>
</div>

<div id="articles">
  <div id="articles-content">
    {{#each articles}}
      <div class="article" data-id="{{_id}}">
        <div>
          {{datetime}}
        </div>
        <div>
          <em>Obtained from: <span>{{source}}</span></em>
        </div>
        <h3 id="article-title">{{title}}</h3>
        <a href="{{link}}">{{link}}</a>
        <div id="summary">{{summary}}</div>
        {{!-- Comment accordion --}}
        <div class="accordion" id="accordion{{_id}}">
          <div class="card comments-card">
            <div class="card-header" id="heading{{_id}}">
              <h5 class="mb-0">
                <button class="btn btn-link comments-toggler" type="button" data-id="{{_id}}" data-loaded="false" data-toggle="collapse" data-target="#collapse{{_id}}" aria-expanded="true" aria-controls="collapse{{_id}}">
                  Comments (<span id="comment-count-{{_id}}" data-id="{{_id}}">{{notes.length}}</span>)
                </button>
              </h5>
            </div>

            <div id="collapse{{_id}}" class="collapse hide" aria-labelledby="heading{{_id}}" data-parent="#accordion{{_id}}">
              <div id="comments-{{_id}}" class="card-body">
                {{!-- comments go here --}}
                No comments yet.
              </div>
            </div>
          </div>
        </div>

        <div>
          <button data-id="{{_id}}" class="btn btn-sm btn-dark add-note" data-toggle="modal" data-target="#noteModal">Add comment</button>
        </div>
      </div>
    {{/each}}
  </div>
</div>


<!-- Scrape Modal -->
<div class="modal fade" id="scrapeModal" tabindex="-1" role="dialog" aria-labelledby="scrapeModalTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">
        ...
      </div>
    </div>
  </div>
</div>

<!-- Note Modal -->
<div class="modal fade" id="noteModal" tabindex="-1" role="dialog" aria-labelledby="noteModalTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="noteModalLongTitle">Add a comment</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="aliasInput">Alias</label>
            <input type="text" class="form-control" id="aliasInput" placeholder="Your alias">
          </div>

          <div class="form-group">
            <label for="commentInput">Comment</label>
            <textarea class="form-control" id="commentInput" rows="3" placeholder="Enter Comment"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" id="save-button" data-id="0" class="btn btn-dark" data-toggle="modal" data-target="#noteModal">Submit comment</button>
      </div>
    </div>
  </div>
</div>

<!-- Search Modal -->
<div class="modal fade" id="searchModal" tabindex="-1" role="dialog" aria-labelledby="searchModalTitle"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="searchModalLongTitle">Search</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class='container search-box'>
          <div class="row">
            <div class='col'>
              <p>Include articles from</p>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="sourceCheck1" checked>
                <label id="labelCheck1" class="form-check-label" for="sourceCheck1">
                  Disclose.tv
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="sourceCheck2" checked>
                <label id="labelCheck2" class="form-check-label" for="sourceCheck2">
                  Fortean News
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="sourceCheck3" checked>
                <label id="labelCheck3" class="form-check-label" for="sourceCheck3">
                  Unexplained Mysteries
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="sourceCheck4" checked>
                <label id="labelCheck4" class="form-check-label" for="sourceCheck4">
                  Mysterious Universe
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="sourceCheck5" checked>
                <label id="labelCheck5" class="form-check-label" for="sourceCheck5">
                  Bigfoot Evidence
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="sourceCheck6" checked>
                <label id="labelCheck6" class="form-check-label" for="sourceCheck6">
                  Ghost Theory
                </label>
              </div>
              <input id="search-query" class="form-control form-control-lg" type="text" placeholder="Include a title search term">
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button id="search-button" class="btn btn-md btn-dark" data-dismiss="modal">
            Search
        </button>
      </div>
    </div>
  </div>
</div>