<div id="header" class="jumbotron">
  <h1>Monster News</h1>

  <h3>For when checking your closet isn't enough</h3>

  <button id="scrape-button" class="btn btn-lg btn-light" data-toggle="modal" data-target="#scrapeModal">Update articles</button>
</div>

<div id="articles">
  <div>
    {{#each articles}}
      <div class="article" data-id="{{_id}}">
        <div>
          {{datetime}}
        </div>
        <div>
          <em>Obtained from: <span>{{source}}</span></em>
        </div>
        <h3>{{title}}</h3>
        <a href="{{link}}">{{link}}</a>
        {{!-- Comment accordion --}}
        <div class="accordion" id="accordion{{_id}}">
          <div class="card comments-card">
            <div class="card-header" id="heading{{_id}}">
              <h5 class="mb-0">
                <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapse{{_id}}" aria-expanded="true" aria-controls="collapse{{_id}}">
                  Show Comments
                </button>
              </h5>
            </div>

            <div id="collapse{{_id}}" class="collapse hide" aria-labelledby="heading{{_id}}" data-parent="#accordion{{_id}}">
              <div id="comments" class="card-body">
                {{!-- comments go here --}}
              </div>
            </div>
          </div>
        </div>

        <div>
          <button class="btn btn-sm btn-dark add-note" data-toggle="modal" data-target="#noteModal">Add note</button>
        </div>
      </div>
    {{/each}}
  </div>
</div>


<!-- Scrape Modal -->
<div class="modal fade" id="scrapeModal" tabindex="-1" role="dialog" aria-labelledby="scrapeModalTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">
        ...
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="noteModal" tabindex="-1" role="dialog" aria-labelledby="noteModalTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="noteModalLongTitle">Add a comment</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="aliasInput">Alias</label>
            <input type="text" class="form-control" id="aliasInput" placeholder="Your alias">
          </div>

          <div class="form-group">
            <label for="commentInput">Comment</label>
            <textarea class="form-control" id="commentInput" rows="3" placeholder="Enter Comment"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" id="save-button" class="btn btn-dark">Save changes</button>
      </div>
    </div>
  </div>
</div>